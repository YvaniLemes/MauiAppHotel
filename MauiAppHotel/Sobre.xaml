<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Sobre"
             Title="Sobre">
    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">

        <Label Text="Sobre o Aplicativo"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="#6A1B9A"
               FontAttributes="Bold"/>

        <Label Text="Aplicativo desenvolvido para cálculo de diárias de hospedagem."
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Black"
               HorizontalTextAlignment="Center"/>

        <Label Text="Desenvolvido por: Yvani"
               FontSize="18"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <Label Text="Ano de desenvolvimento: 2025"
               FontSize="18"
               TextColor="Black"
               HorizontalOptions="Center"/>
        
        <Label Text="Este aplicativo permite calcular a diária da hospedagem e escolher acomodações conforme a necessidade do usuário."
                   FontSize="18"
                   TextColor="{StaticResource PrimaryDarkText}"
                   HorizontalOptions="Center"/>

        <Button Text="Voltar"
                BackgroundColor="#9C27B0"
                TextColor="White"
                Clicked="OnVoltarClicked"/>
    
    </VerticalStackLayout>
</ContentPage>