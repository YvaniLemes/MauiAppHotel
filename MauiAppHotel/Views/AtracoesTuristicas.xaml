<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.AtracoesTuristicas"
             Title="Atrações Turísticas"
             BackgroundColor="#f4f4f4">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="12">

            <Label Text="Atrações Turísticas"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- Atração 1 -->
            <Frame CornerRadius="10" Padding="0" HasShadow="True">
                <Grid>
                    <Image Source="mar.jpg"
                           Aspect="AspectFill"
                           HeightRequest="160"
                           Opacity="0.9" />
                    <Label Text="Praia do Julião"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,8"
                           FontAttributes="Bold"
                           TextColor="White"
                           BackgroundColor="#80000000"
                           Padding="5,2"
                           FontSize="16"/>
                </Grid>
            </Frame>

            <!-- Atração 2 -->
            <Frame CornerRadius="10" Padding="0" HasShadow="True">
                <Grid>
                    <Image Source="piscina.jpg"
                           Aspect="AspectFill"
                           HeightRequest="160"
                           Opacity="0.9" />
                    <Label Text="Vista dos quartos"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,8"
                           FontAttributes="Bold"
                           TextColor="White"
                           BackgroundColor="#80000000"
                           Padding="5,2"
                           FontSize="16"/>
                </Grid>
            </Frame>

            <!-- Atração 3 -->
            <Frame CornerRadius="10" Padding="0" HasShadow="True">
                <Grid>
                    <Image Source="montanha.jpg"
                           Aspect="AspectFill"
                           HeightRequest="160"
                           Opacity="0.9" />
                    <Label Text="Contato com a natureza"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,8"
                           FontAttributes="Bold"
                           TextColor="White"
                           BackgroundColor="#80000000"
                           Padding="5,2"
                           FontSize="16"/>
                </Grid>
            </Frame>

            <!-- Atração 4 -->
            <Frame CornerRadius="10" Padding="0" HasShadow="True">
                <Grid>
                    <Image Source="familia.jpg"
                           Aspect="AspectFill"
                           HeightRequest="160"
                           Opacity="0.9" />
                    <Label Text="Lazer em família"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,8"
                           FontAttributes="Bold"
                           TextColor="White"
                           BackgroundColor="#80000000"
                           Padding="5,2"
                           FontSize="16"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
